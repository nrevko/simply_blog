        <ul>
          < %= render(post.comments) %>
        </ul>
      
< % end %-->
      </div>
      <!--% render(Comment.new(:post_id=>post)) %-->
<div id=<%= "new_comment_for_"+post.id.to_s %>>
</div>
</div>
  </div>
<% end %>
</div>