<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<div id="blog">
<h1>Welcome to Simple Blog</h1>

<% @posts.each do |post| %>
  <div class="entry">
    <h2><%= link_to post.post_title, post %></h2>
    <div class="info" >
      Created on <%= post.date_of_creation %> in &quot;<%= post.category.category_name %>&quot; category.
    </div>
    <div class="post_text">
      <%= sanitize truncate(post.post_text, :length => 300) %>
      <% if post.post_text.length>300 %>
        <%= link_to "See More", post %>
      <% end %>

<br />
      <%= link_to_if(post.comments.count>0, pluralize(post.comments.count, 'comment'), post_comments_path(:post_id=>post), :remote=>true) %>
      | <%= link_to "Post your comment", new_post_comment_path(:post_id => post) %>
    <div id=<%="post_comments_list_"+post.id.to_s %>>

      <!--Here render ajax template for single comment-->
